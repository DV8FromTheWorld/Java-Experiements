package dv8.output;

public class DebugOutput {
	private static boolean enabled = false;
	private static int debugLevel = 0;
	public static void init(){
		try{
			if(Main.runArgs[0] != null){
				if(Integer.getInteger(Main.runArgs[0]) >0  && Integer.getInteger(Main.runArgs[0]) < 4){
					enabled = true;
					debugLevel = Integer.getInteger(Main.runArgs[0]);
					out("Debug Enabled.  Debug output level : " + debugLevel , 1);
				}
			}
		}catch(Exception e){
			
		}
	}
	
	public static void out(String s, int level){
		if(enabled && level <= debugLevel){
			System.out.println(s);
		}
	}
	public static String space(int i){
		String spacing = "";
		for(int j = 1; j <= i; j++){
			spacing = spacing + " ";
		}
		return spacing;		
	}
	public static String compensateAndSpace(int i){
		String bob = "";
		for(int j = (50 - i); j >=0; j--){
			bob = bob + " ";
		}
		return bob;
	}
}
