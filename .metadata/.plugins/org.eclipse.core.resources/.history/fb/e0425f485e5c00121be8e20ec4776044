package dv8.output;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;

public class ParseJava {
	public static void parseTheJava(){
		int i1, i2, i3, i4, i5;
		String tier, slot1, slot2, slot3, slot4, slot5, slot6, slot7, slot8, slot9, slot10, output, outputAmount;
		String strJava;
		String[] recipe;
		BufferedReader br = null;
		try{
			br = new BufferedReader(new FileReader(workingDir.getDir() + "\\files\\parseMe.txt"));
				//while((strJava = br.readLine()) != null){
				for(int i = 0; i < 4; i++){
					strJava = br.readLine();
					strJava.trim();
					tier = strJava.substring((i1=strJava.indexOf("(")+1), (i2=strJava.indexOf(",", i1)));
					slot1 = strJava.substring(i2+2, (i3=getProperIndex(i2, strJava)));
					System.out.println(tier);
					System.out.println(slot1);
					recipe = null;
				}
			br.close();
		}catch(IOException e){
			e.printStackTrace();
		}
	}
	public static int getProperIndex(int startIndex, String javaString){
		int index1 = (javaString.indexOf("),", startIndex)+1);
		int index2 = (javaString.indexOf("l,", startIndex)+1);
			if(index1 == -1){
				return index2;
			}else if(index2 == -1){
				return index1;
			}else if(index1 < index2){
				return index1;
			}else{
				return index2;
			}
	}
}
